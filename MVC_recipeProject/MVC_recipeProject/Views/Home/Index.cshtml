@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="color: #ff5733;">ברוכים הבאים לפיצרייה</h1>
    <p style="font-size: 18px; color: #555;">Learn about <a href="https://learn.microsoft.com/aspnet/core" style="color: #ff5733; text-decoration: underline;">building Web apps with ASP.NET Core</a>.</p>

    <!-- Adding the welcome sign with the pizza image -->
    <div style="margin-top: 20px;">
        <img src="~/path/to/your/image.png" alt="ברוכים הבאים לפיצרייה" style="max-width: 80%; height: auto; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);" />
    </div>

    <!-- Adding images of pizzas -->
    <div style="display: flex; justify-content: center; margin-top: 30px;">
        <img src="~/images/pizza1.jpg" alt="פיצה 1" style="width: 200px; height: auto; margin-right: 10px; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);" />
        <img src="~/images/pizza2.jpg" alt="פיצה 2" style="width: 200px; height: auto; margin-right: 10px; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);" />
        <img src="~/images/pizza3.jpg" alt="פיצה 3" style="width: 200px; height: auto; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);" />
    </div>


    <!-- Adding input fields for pizza recipe type with instructions instead of cooking time -->
    <div style="margin-top: 40px;">
        <h2 style="color: #ff5733;">הזן את פרטי המתכון לפיצה המבוקשת:</h2>

        <form style="max-width: 600px; margin: 0 auto; text-align: left;">
            <div class="form-group" style="margin-bottom: 15px;">
                <label for="pizzaType" style="font-weight: bold; color: #333;">סוג הפיצה:</label>
                <input type="text" class="form-control" id="pizzaType" placeholder="הזן את סוג הפיצה" style="border: 2px solid #ff5733; border-radius: 5px; padding: 10px;" />
            </div>
            <div class="form-group" style="margin-bottom: 15px;">
                <label for="ingredients" style="font-weight: bold; color: #333;">רכיבים:</label>
                <input type="text" class="form-control" id="ingredients" placeholder="הזן את הרכיבים" style="border: 2px solid #ff5733; border-radius: 5px; padding: 10px;" />
            </div>
            <div class="form-group" style="margin-bottom: 15px;">
                <label for="instructions" style="font-weight: bold; color: #333;">הוראות:</label>
                <textarea class="form-control" id="instructions" placeholder="הזן את ההוראות" rows="4" style="border: 2px solid #ff5733; border-radius: 5px; padding: 10px;"></textarea>
            </div>

            <button type="submit" class="btn btn-primary" style="background-color: #ff5733; border: none; padding: 10px 20px; font-size: 16px; border-radius: 5px;">שלח</button>
        </form>
    </div>
</div>
